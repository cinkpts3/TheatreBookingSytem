<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.theatrebookingsystem.CustomerController">
   <children>
      <ListView fx:id="customerListView" layoutY="111.0" prefHeight="242.0" prefWidth="614.0" />
      <Label layoutX="14.0" layoutY="39.0" text="CUSTOMER">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="23.0" />
         </font>
      </Label>
      <TextField fx:id="nameField" layoutX="14.0" layoutY="76.0" promptText="name" />
      <TextField fx:id="emailField" layoutX="173.0" layoutY="76.0" promptText="email" />
      <TextField fx:id="phoneNumberField" layoutX="338.0" layoutY="76.0" promptText="phone number" />
      <Button fx:id="addCustomerButton" layoutX="575.0" layoutY="76.0" mnemonicParsing="false" onAction="#addCustomerList" text="+" />
      <Button fx:id="deleteCustomerButton" layoutX="536.0" layoutY="360.0" mnemonicParsing="false" onAction="#removeCustomer" text="REMOVE" />
   </children>
</AnchorPane>
